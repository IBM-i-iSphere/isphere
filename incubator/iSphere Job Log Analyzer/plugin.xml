		<editor
			name=""
			icon="icons/joblog_analyzer.png"
			class="biz.isphere.joblogexplorer.editor.JobLogAnalyzerEditor"
			id="biz.isphere.joblogexplorer.editor.JobLogAnalyzerEditor"/>
	</extension>
      	
