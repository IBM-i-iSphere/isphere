      	<objectContribution
            objectClass="biz.isphere.rse.spooledfiles.SpooledFileResource"
            id="biz.isphere.joblogexplorer.menu.spooledfile">

           <visibility>
              <objectState name="biz.isphere.rse.spooledfiles.SpooledFileResource.file" value="QPJOBLOG" />
           </visibility>

	       <action
              class="biz.isphere.joblogexplorer.action.OpenJobLogAnalyzerAction"
