<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

      	<!--
      	  ==========================================
      	    iSphere Menu Contribution
      	  ==========================================
      	-->

   <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="menu:biz.isphere.core.menu.isphere?endof=additions">

      	<menu
      			id="biz.isphere.rcp.menu.JournalOutputFile"
      			label="Journal Explorer"
      			icon="icons/journal_explorer.png">
	         <command
	               id="biz.isphere.rcp.menu.JournalOutputFile.open"
	               commandId="biz.isphere.rcp.command.JournalOutputFile.open"
	               icon="icons/open_journal_output_file.png">
	         </command>
	         <command
	               id="biz.isphere.rcp.menu.JournalJsonFile.open"
	               commandId="biz.isphere.rcp.command.JournalJsonFile.open"
	               icon="icons/open_journal_json_file.png">
	         </command>
      	</menu>

      </menuContribution>
   </extension>
   
      	<!--
      	  ==========================================
      	    iSphere Commands
      	  ==========================================
      	-->

   <extension
         point="org.eclipse.ui.commands">
         
      <category
            name="iSphere RCD"
            id="biz.isphere.rcd.Commands">
      </category>
      
      <command
            defaultHandler="biz.isphere.rcp.handlers.journalexplorer.OpenJournalOutputFileHandler"
            id="biz.isphere.rcp.command.JournalOutputFile.open"
            categoryId="biz.isphere.rcd.Commands"
            name="Open Journal Output File">
      </command>
      
      <command
            defaultHandler="biz.isphere.rcp.handlers.journalexplorer.OpenJournalJsonFileHandler"
            id="biz.isphere.rcp.command.JournalJsonFile.open"
            categoryId="biz.isphere.rcd.Commands"
            name="Open Journal Json File">
      </command>
   </extension>
      	
      	<!--
      	  ==========================================
      	    Journal Explorer Perspective
      	  ==========================================
      	-->

   <extension point="org.eclipse.ui.perspectives">
   
      <perspective 
	       id="biz.isphere.rcp.perspectives.JournalExplorerPerspectiveLayout" 
	       name="%Perspective_Journal_Explorer"
	       class="biz.isphere.rcp.perspectives.JournalExplorerPerspectiveLayout"
	       icon="icons/journal_explorer.png">
      </perspective>
       
   </extension>   

</plugin>
